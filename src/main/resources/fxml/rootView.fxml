<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="dam.dad.app.controller.RootController">
   <top>
      <VBox spacing="5">
         <MenuBar>
            <Menu text="Archivo">
               <MenuItem text="Actualizar datos" onAction="#handleActualizarDatos" />
               <SeparatorMenuItem />
               <MenuItem text="Cerrar sesión" onAction="#handleCerrarSesion" />
               <MenuItem text="Salir" onAction="#handleSalir" />
            </Menu>
            <Menu text="Vistas">
               <MenuItem text="Vehículos y Reparaciones" onAction="#handleMostrarVehiculos" />
               <MenuItem text="Talleres" onAction="#handleMostrarTalleres" />
               <MenuItem text="Informes" onAction="#handleMostrarInformes" />
            </Menu>
         </MenuBar>
         
         <ToolBar>
            <Button text="Vehículos" onAction="#handleMostrarVehiculos">
               <tooltip>
                  <Tooltip text="Gestionar vehículos y reparaciones" />
               </tooltip>
            </Button>
            <Button text="Talleres" onAction="#handleMostrarTalleres">
               <tooltip>
                  <Tooltip text="Gestionar talleres y valoraciones" />
               </tooltip>
            </Button>
            <Button text="Informes" onAction="#handleMostrarInformes">
               <tooltip>
                  <Tooltip text="Ver informes y estadísticas" />
               </tooltip>
            </Button>
            <Separator orientation="VERTICAL" />
            <Button text="Actualizar" onAction="#handleActualizarDatos">
               <tooltip>
                  <Tooltip text="Actualizar datos" />
               </tooltip>
            </Button>
            <Separator orientation="VERTICAL" />
            <Button text="Cerrar sesión" onAction="#handleCerrarSesion">
               <tooltip>
                  <Tooltip text="Cerrar sesión actual" />
               </tooltip>
            </Button>
         </ToolBar>
      </VBox>
   </top>
   
   <center>
      <!-- Aquí se cargarán dinámicamente las vistas -->
   </center>
   
   <bottom>
      <HBox spacing="5" alignment="CENTER_RIGHT">
         <padding>
            <Insets top="5" right="10" bottom="5" left="10" />
         </padding>
         <Label text="Gestión de Reparaciones de Vehículos" />
      </HBox>
   </bottom>
</BorderPane>
