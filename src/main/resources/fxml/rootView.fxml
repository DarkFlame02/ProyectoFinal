<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane minHeight="400.0" minWidth="600.0" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dam.dad.app.controller.RootController">
   
   <top>
      <MenuBar BorderPane.alignment="CENTER">
         <Menu text="Archivo">
            <MenuItem onAction="#handleNuevoVehiculo" text="Nuevo Vehículo" />
            <MenuItem onAction="#handleSalir" text="Salir" />
         </Menu>
         <Menu text="Vehículos">
            <MenuItem onAction="#handleListarVehiculos" text="Listar Vehículos" />
            <MenuItem onAction="#handleBuscarVehiculo" text="Buscar Vehículo" />
         </Menu>
         <Menu text="Reparaciones">
            <MenuItem onAction="#handleNuevaReparacion" text="Nueva Reparación" />
            <MenuItem onAction="#handleHistorialReparaciones" text="Historial de Reparaciones" />
         </Menu>
      </MenuBar>
   </top>

   <center>
      <TabPane tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
         <Tab text="Vehículos">
            <VBox spacing="10.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <TableView fx:id="vehiculosTable" VBox.vgrow="ALWAYS">
                  <columns>
                     <TableColumn fx:id="matriculaColumn" prefWidth="100.0" text="Matrícula" />
                     <TableColumn fx:id="marcaColumn" prefWidth="100.0" text="Marca" />
                     <TableColumn fx:id="modeloColumn" prefWidth="100.0" text="Modelo" />
                     <TableColumn fx:id="anioColumn" prefWidth="80.0" text="Año" />
                     <TableColumn fx:id="kilometrosColumn" prefWidth="100.0" text="Kilómetros" />
                  </columns>
               </TableView>
               <HBox spacing="10.0">
                  <padding>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </padding>
                  <Button maxWidth="Infinity" onAction="#handleNuevoVehiculo" text="Nuevo Vehículo" HBox.hgrow="ALWAYS" />
                  <Button maxWidth="Infinity" onAction="#handleEditarVehiculo" text="Editar" HBox.hgrow="ALWAYS" />
                  <Button maxWidth="Infinity" onAction="#handleEliminarVehiculo" text="Eliminar" HBox.hgrow="ALWAYS" />
               </HBox>
            </VBox>
         </Tab>
         
         <Tab text="Reparaciones">
            <VBox spacing="10.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <TableView fx:id="reparacionesTable" VBox.vgrow="ALWAYS">
                  <columns>
                     <TableColumn fx:id="fechaColumn" prefWidth="100.0" text="Fecha" />
                     <TableColumn fx:id="vehiculoColumn" prefWidth="120.0" text="Vehículo" />
                     <TableColumn fx:id="descripcionColumn" prefWidth="200.0" text="Descripción" />
                     <TableColumn fx:id="costoColumn" prefWidth="80.0" text="Costo" />
                     <TableColumn fx:id="tallerColumn" prefWidth="150.0" text="Taller" />
                  </columns>
               </TableView>
               <HBox spacing="10.0">
                  <padding>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </padding>
                  <Button maxWidth="Infinity" onAction="#handleNuevaReparacion" text="Nueva Reparación" HBox.hgrow="ALWAYS" />
                  <Button maxWidth="Infinity" onAction="#handleEditarReparacion" text="Editar" HBox.hgrow="ALWAYS" />
                  <Button maxWidth="Infinity" onAction="#handleEliminarReparacion" text="Eliminar" HBox.hgrow="ALWAYS" />
               </HBox>
            </VBox>
         </Tab>
      </TabPane>
   </center>
</BorderPane>
