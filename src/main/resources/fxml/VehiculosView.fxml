<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
     fx:controller="dam.dad.app.controller.VehiculoController">
   
   <padding>
      <Insets top="20" right="20" bottom="20" left="20" />
   </padding>
   
   <Label text="Gestión de Vehículos y Reparaciones" style="-fx-font-size: 18; -fx-font-weight: bold;" />
   
   <SplitPane dividerPositions="0.5" VBox.vgrow="ALWAYS">
      <VBox spacing="15">
         <padding>
            <Insets top="10" right="10" bottom="10" left="10" />
         </padding>
         
         <Label text="Vehículos" style="-fx-font-size: 14; -fx-font-weight: bold;" />
         
         <TableView fx:id="vehiculosTable" VBox.vgrow="ALWAYS">
            <columns>
               <TableColumn fx:id="matriculaColumn" prefWidth="100" text="Matrícula" />
               <TableColumn fx:id="marcaColumn" prefWidth="100" text="Marca" />
               <TableColumn fx:id="modeloColumn" prefWidth="100" text="Modelo" />
               <TableColumn fx:id="anioColumn" prefWidth="60" text="Año" />
               <TableColumn fx:id="kilometrosColumn" prefWidth="100" text="Kilómetros" />
            </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
         </TableView>
         
         <HBox spacing="15" alignment="CENTER">
            <padding>
                <Insets top="10" />
            </padding>
            <Button text="Nuevo" onAction="#handleNuevoVehiculo" prefWidth="90" prefHeight="30" />
            <Button text="Editar" onAction="#handleEditarVehiculo" prefWidth="90" prefHeight="30" />
            <Button text="Eliminar" onAction="#handleEliminarVehiculo" prefWidth="90" prefHeight="30" />
            <Button text="Buscar" onAction="#handleBuscarVehiculo" prefWidth="90" prefHeight="30" />
            <Button text="Historial" onAction="#handleHistorialReparaciones" prefWidth="90" prefHeight="30" />
         </HBox>
      </VBox>
      
      <VBox spacing="15" fx:id="reparacionesContainer">
         <padding>
            <Insets top="10" right="10" bottom="10" left="10" />
         </padding>
         
         <Label text="Reparaciones" style="-fx-font-size: 14; -fx-font-weight: bold;" />
         
         <!-- Este es un contenedor donde el controlador cargará la vista de reparaciones -->
      </VBox>
   </SplitPane>
</VBox> 