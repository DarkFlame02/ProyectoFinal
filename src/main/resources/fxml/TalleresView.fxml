<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
     fx:controller="dam.dad.app.controller.TallerController">
   
   <padding>
      <Insets top="20" right="20" bottom="20" left="20" />
   </padding>
   
   <Label text="Gestión de Talleres y Valoraciones" style="-fx-font-size: 18; -fx-font-weight: bold;" />
   
   <SplitPane dividerPositions="0.5" VBox.vgrow="ALWAYS">
      <VBox spacing="15">
         <padding>
            <Insets top="10" right="10" bottom="10" left="10" />
         </padding>
         
         <Label text="Talleres" style="-fx-font-size: 14; -fx-font-weight: bold;" />
         
         <TableView fx:id="talleresTable" VBox.vgrow="ALWAYS">
            <columns>
               <TableColumn fx:id="nombreColumn" prefWidth="150" text="Nombre" />
               <TableColumn fx:id="direccionColumn" prefWidth="200" text="Dirección" />
               <TableColumn fx:id="telefonoColumn" prefWidth="100" text="Teléfono" />
               <TableColumn fx:id="valoracionColumn" prefWidth="80" text="Valoración" />
            </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
         </TableView>
         
         <HBox spacing="15" alignment="CENTER">
            <padding>
                <Insets top="10" />
            </padding>
            <Button text="Nuevo" onAction="#handleNuevoTaller" prefWidth="90" prefHeight="30" />
            <Button text="Editar" onAction="#handleEditarTaller" prefWidth="90" prefHeight="30" />
            <Button text="Eliminar" onAction="#handleEliminarTaller" prefWidth="90" prefHeight="30" />
         </HBox>
      </VBox>
      
      <VBox spacing="15">
         <padding>
            <Insets top="10" right="10" bottom="10" left="10" />
         </padding>
         
         <Label text="Valoraciones" style="-fx-font-size: 14; -fx-font-weight: bold;" />
         
         <TableView fx:id="valoracionesTable" VBox.vgrow="ALWAYS">
            <columns>
               <TableColumn fx:id="puntuacionColumn" prefWidth="100" text="Puntuación" />
               <TableColumn fx:id="comentarioColumn" prefWidth="300" text="Comentario" />
            </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
         </TableView>
         
         <HBox spacing="15" alignment="CENTER">
            <padding>
                <Insets top="10" />
            </padding>
            <Button text="Nueva Valoración" onAction="#handleNuevaValoracion" prefWidth="140" prefHeight="30" />
         </HBox>
      </VBox>
   </SplitPane>
</VBox> 